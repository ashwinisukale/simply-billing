<div class="page-header">
  <%= link_to new_transaction_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Make a New Bill
  <% end %>
  <h1>Listing transactions</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover" id="transactions">
    <thead>
      <tr>
        <th>Customer name</th>
        <th>Mobile number</th>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total amount</th>
        <!-- <th></th>
        <th></th>
        <th></th> -->
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @transactions) do |transaction| %>
            <td><%= transaction.customer_name %></td>
            <td><%= transaction.mobile_number %></td>
            <td><%= transaction.product %></td>
            <td><%= transaction.price %></td>
            <td><%= transaction.quantity %></td>
            <td><%= transaction.total_amount %></td>
            <!-- <td><%#= link_to 'Show', transaction %></td>
            <td><%#= link_to 'Edit', edit_transaction_path(transaction) %></td>
            <td><%#= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#transactions').DataTable( {
        "order": [[ 3, "desc" ]]
    } );
} );
</script>