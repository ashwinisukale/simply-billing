<div class="page-header">
  <%= link_to transactions_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_transaction_path(@transaction), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show transaction</h1>
</div>

<dl class="dl-horizontal">
  <dt>Customer name:</dt>
  <dd><%= @transaction.customer_name %></dd>

  <dt>Mobile number:</dt>
  <dd><%= @transaction.mobile_number %></dd>

  <dt>Product:</dt>
  <dd><%= @transaction.product %></dd>

  <dt>Price:</dt>
  <dd><%= @transaction.price %></dd>

  <dt>Quantity:</dt>
  <dd><%= @transaction.quantity %></dd>

  <dt>Total amount:</dt>
  <dd><%= @transaction.total_amount %></dd>

</dl>
