<%= form_for(@transaction, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @transaction.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h4>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :customer_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :customer_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mobile_number, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :mobile_number, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :product, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :product, class: "form-control" %>
    </div>

<div class="ui-widget">
  <label for="tags">Tags: </label>
  <input id="tags">
</div>

  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :quantity, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_amount, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :total_amount, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

